<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/share_sdk"
                android:textColor="@color/logo_text_color"
                android:textSize="48dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWeibo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/weibo_login"
                android:gravity="center"
                android:text="@string/login_with_sina_weibo"
                android:textSize="18dp" >
            </TextView>

            <TextView
                android:id="@+id/tvQq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/qq_login"
                android:gravity="center"
                android:text="@string/login_with_qzone"
                android:textColor="@color/white"
                android:textSize="18dp" >
            </TextView>

            <TextView
                android:id="@+id/tvOther"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/other_login"
                android:gravity="center"
                android:text="@string/login_with_other_plat"
                android:textColor="@color/login_with_other_plat_text_color"
                android:textSize="18dp" >
            </TextView>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
